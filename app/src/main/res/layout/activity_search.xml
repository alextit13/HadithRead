<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bingerdranch.android.hadithread.SearchActivity"
    android:background="@drawable/back_for_reader"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp"
            android:layout_marginEnd="30sp"
            android:textColor="#250000"
            android:text="@string/text_book"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:hint="@string/text_book_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp"
            android:layout_marginEnd="30sp"
            android:textColor="#250000"
            android:text="@string/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:hint="@string/text_title_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:textSize="25sp"
            android:layout_marginEnd="30sp"
            android:textColor="#250000"
            android:text="@string/text_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:hint="@string/text_word_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:drawableStart="@drawable/iconka"
        android:text="@string/text_button_search"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_gravity="center_horizontal"
        android:id="@+id/listViewResultSearch"
        android:layout_width="200sp"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
